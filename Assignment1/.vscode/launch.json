{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Prolog Files",
            "type": "prolog",
            "request": "launch",
            "runtimeExecutable": "/usr/bin/swipl",
            "runtimeArgs": [],
            "env": {},
            "program": "${file}",
            "cwd": "${fileDirname}",
            "startupQuery": "debugging_predicate.",
            "stopOnEntry": true,
            "traceCmds": {
                "continue": [
                    "leap",
                    "l"
                ],
                "stepover": [
                    "skip",
                    "s"
                ],
                "stepinto": [
                    "creep",
                    "c"
                ],
                "stepout": [
                    "up",
                    "u"
                ]
            }
        }
    ]
}
